<%= form_for @presentation, :html => { :class => "form-horizontal presentation" } do |f| %>

  <% if @presentation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@presentation.errors.count, "error") %> prohibited this presentation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @presentation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :path, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :path, :class => 'form-control' %>
    </div>
    <%=f.error_span(:path) %>
  </div>
  <div class="form-group">
    <%= f.label :authors, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :authors, :class => 'form-control' %>
    </div>
    <%=f.error_span(:authors) %>
  </div>
  <div class="form-group">
    <%= f.label :location_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :location_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:location_id) %>
  </div>
  <div class="form-group">
    <%= f.label :number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:number) %>
  </div>
  <div class="form-group">
    <%= f.label :page, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :page, :class => 'form-control' %>
    </div>
    <%=f.error_span(:page) %>
  </div>
  <div class="form-group">
    <%= f.label :is_active, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :is_active, :class => 'form-control' %>
    </div>
    <%=f.error_span(:is_active) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                presentations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
