<%- model_class = Mark -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:presentation_id) %>:</strong></dt>
  <dd><%= @mark.presentation_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:jury_id) %>:</strong></dt>
  <dd><%= @mark.jury_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:criterion_1) %>:</strong></dt>
  <dd><%= @mark.criterion_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:criterion_2) %>:</strong></dt>
  <dd><%= @mark.criterion_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:criterion_3) %>:</strong></dt>
  <dd><%= @mark.criterion_3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:criterion_4) %>:</strong></dt>
  <dd><%= @mark.criterion_4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:criterion_5) %>:</strong></dt>
  <dd><%= @mark.criterion_5 %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              marks_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mark_path(@mark), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mark_path(@mark),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
