<%- model_class = Mark -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:presentation_id) %></th>
      <th><%= model_class.human_attribute_name(:jury_id) %></th>
      <th><%= model_class.human_attribute_name(:criterion_1) %></th>
      <th><%= model_class.human_attribute_name(:criterion_2) %></th>
      <th><%= model_class.human_attribute_name(:criterion_3) %></th>
      <th><%= model_class.human_attribute_name(:criterion_4) %></th>
      <th><%= model_class.human_attribute_name(:criterion_5) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @marks.each do |mark| %>
      <tr>
        <td><%= link_to mark.id, mark_path(mark) %></td>
        <td><%= mark.presentation_id %></td>
        <td><%= mark.jury_id %></td>
        <td><%= mark.criterion_1 %></td>
        <td><%= mark.criterion_2 %></td>
        <td><%= mark.criterion_3 %></td>
        <td><%= mark.criterion_4 %></td>
        <td><%= mark.criterion_5 %></td>
        <td><%=l mark.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mark_path(mark), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mark_path(mark),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mark_path,
            :class => 'btn btn-primary' %>
